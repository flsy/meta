{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "lib": ["es6", "dom", "es2017"],
    "outDir": "./lib",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react", "jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/setupTests.ts"
  ],
  "references": [
    {
      "path": "../metacore"
    }
  ]
}
